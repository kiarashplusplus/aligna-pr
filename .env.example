# Environment Variables for Aligna PR Prospecting Tool

# ============================================
# Search APIs (optional - use free tier or direct scraping)
# ============================================

# Google Custom Search API
# Get your key at: https://developers.google.com/custom-search/v1/introduction
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# Bing Search API
# Get your key at: https://azure.microsoft.com/en-us/services/cognitive-services/bing-web-search-api/
BING_SEARCH_API_KEY=

# ============================================
# OpenAI (optional - for enhanced angle generation)
# ============================================
OPENAI_API_KEY=

# ============================================
# Storage Configuration
# ============================================
DATABASE_PATH=./data/prospects.db

# ============================================
# Scraping Configuration
# ============================================

# Maximum requests per hour per domain
MAX_REQUESTS_PER_HOUR=100

# Minimum delay between requests (in milliseconds)
MIN_DELAY_BETWEEN_REQUESTS=2000

# User agent for HTTP requests
USER_AGENT="AlignaPRBot/1.0 (+https://www.align-a.com; contact@align-a.com)"

# ============================================
# Output Configuration
# ============================================

# Output format: json, csv, or both
OUTPUT_FORMAT=both

# Output directory path
OUTPUT_PATH=./output/

# ============================================
# Application Settings
# ============================================

# Minimum score to include in results (0-100)
MIN_SCORE=40

# Maximum articles to process per search query
MAX_ARTICLES_PER_QUERY=50

# Enable verbose logging
VERBOSE=false
